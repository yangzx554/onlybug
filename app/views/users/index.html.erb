<%  # coding: utf-8= %>
<div id= 'main'>
  <%= render :partial=>'layouts/project' %>
  <div id="action-nav">
    <% if @users.include?(@u) == true  %>
      <%=  render :partial=>'layouts/action' %>
    <%  else %>
      <li>
        <%=link_to "加入项目",join_path(@p,@u)%>
      </li>
    <%end%>
  </div>
  <div id="main-content" class="clear">
    <ul id="members-list" class="media-list">
      <% @users.each do|user| %>
        <li class="clear media-item">
          <%= link_to(image_tag(user.photo.public_filename(:tiny),:class =>"avatar"),user_path(user)) %>
          <h4><%=  user.name %></h4>
          <% if user  == @owner %>
            <span class="member-state">
              <span><label>
                  项目管理者
              </label></span>
            </span>
          <%end%>
        </li>
      <%end%>
    </ul>
  </div>
</div>

